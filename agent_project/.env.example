# SecretSnipe Agent Infrastructure Environment Configuration
# Copy this file to .env and update with your values

# ==================== Database ====================
# PostgreSQL password (REQUIRED - change in production!)
DB_PASSWORD=secretsnipe_secure_pass

# ==================== Security ====================
# Enable bootstrap endpoint for initial API key creation
# Disable after first key is created for security
BOOTSTRAP_ENABLED=true

# Optional: Require this token for bootstrap (recommended)
BOOTSTRAP_TOKEN=

# ==================== SSL/TLS ====================
# Enable HTTPS (recommended for production)
SSL_ENABLED=false
# SSL_CERT_FILE=/certs/server.crt
# SSL_KEY_FILE=/certs/server.key

# ==================== Dashboard ====================
# API key for dashboard to access manager API
# Create via bootstrap endpoint first, then add here
DASHBOARD_API_KEY=

# ==================== Logging ====================
LOG_LEVEL=INFO

# ==================== Agent Settings ====================
# Seconds before marking an agent as offline (no heartbeat)
# AGENT_TIMEOUT_SECONDS=120

# Maximum job runtime in seconds
# JOB_TIMEOUT_SECONDS=3600
