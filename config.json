{
  "debug": false,
  "log_level": "INFO",
  "log_file": "secretsnipe.log",
  "temp_dir": "/tmp/secretsnipe",
  "data_dir": "./data",
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "secretsnipe",
    "username": "secretsnipe",
    "password": "secretsnipe_password",
    "ssl_mode": "prefer",
    "connection_pool_size": 10,
    "connection_timeout": 30
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "password": null,
    "socket_connect_timeout": 5,
    "socket_timeout": 5,
    "retry_on_timeout": true,
    "max_connections": 20
  },
  "scanner": {
    "threads": 4,
    "timeout_seconds": 300,
    "max_file_size_mb": 100,
    "supported_extensions": [
      ".py", ".js", ".ts", ".java", ".cpp", ".c", ".h", ".php", ".rb", ".go",
      ".rs", ".swift", ".kt", ".scala", ".clj", ".hs", ".ml", ".txt", ".md",
      ".json", ".xml", ".yaml", ".yml", ".toml", ".ini", ".cfg", ".conf",
      ".properties", ".env", ".sh", ".bat", ".ps1"
    ],
    "excluded_paths": [
      ".git", "__pycache__", "node_modules", ".venv", "venv",
      "build", "dist", "target", ".next", ".nuxt", "coverage"
    ],
    "enable_ocr": true,
    "ocr_languages": ["en"]
  },
  "webhook": {
    "enabled": false,
    "url": "https://example.com/webhook",
    "method": "POST",
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_delay_seconds": 5,
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer your-token-here"
    }
  },
  "report": {
    "enabled": true,
    "retention_days": 90,
    "auto_generate": true,
    "schedule_cron": "0 9 * * 1",
    "formats": ["html", "pdf", "json"]
  },
  "cache": {
    "enabled": true,
    "ttl_hours": 24,
    "max_memory_mb": 512,
    "compression_enabled": true
  },
  "security": {
    "secret_masking": true,
    "max_secret_length": 100,
    "encryption_enabled": false,
    "audit_log_enabled": true
  }
}