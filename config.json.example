{
  "debug": false,
  "log_level": "INFO",
  "log_file": "secretsnipe.log",
  "temp_dir": "/tmp/secretsnipe",
  "data_dir": "./data",
  "database": {
    "host": "localhost",
    "port": 5432,
    "database": "secretsnipe",
    "username": "your_db_username",
    "password": "your_db_password",
    "ssl_mode": "prefer",
    "connection_pool_size": 10,
    "connection_timeout": 30
  },
  "redis": {
    "host": "localhost",
    "port": 6379,
    "db": 0,
    "password": null,
    "socket_connect_timeout": 5,
    "socket_timeout": 5,
    "retry_on_timeout": true,
    "max_connections": 20
  },
  "scanner": {
    "threads": 4,
    "timeout_seconds": 300,
    "max_file_size_mb": 100,
    "memory_limit_mb": 512,
    "trufflehog_concurrency": 2,
    "trufflehog_max_depth": 5,
    "gitleaks_max_file_size_mb": 10,
    "gitleaks_max_depth": 10,
    "max_findings_per_scan": 10000,
    "supported_extensions": [
      ".py", ".js", ".ts", ".java", ".cpp", ".c", ".h", ".php", ".rb", ".go",
      ".rs", ".swift", ".kt", ".scala", ".clj", ".hs", ".ml", ".txt", ".md",
      ".json", ".xml", ".yaml", ".yml", ".toml", ".ini", ".cfg", ".conf",
      ".properties", ".env", ".sh", ".bat", ".ps1",
      ".pdf", ".docx", ".xlsx", ".pptx", ".doc", ".xls", ".ppt",
      ".jpg", ".jpeg", ".png", ".bmp", ".tiff", ".gif", ".webp",
      ".zip", ".tar", ".gz", ".bz2", ".rar", ".7z"
    ],
    "excluded_paths": [
      ".git", "__pycache__", "node_modules", ".venv", "venv",
      "build", "dist", "target", ".next", ".nuxt", "coverage"
    ],
    "enable_ocr": true,
    "ocr_languages": ["en"]
  },
  "webhook": {
    "enabled": false,
    "url": "https://example.com/webhook",
    "method": "POST",
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "retry_delay_seconds": 5,
    "headers": {
      "Content-Type": "application/json",
      "Authorization": "Bearer your-webhook-token"
    }
  },
  "report": {
    "enabled": true,
    "retention_days": 90,
    "auto_generate": true,
    "schedule_cron": "0 9 * * 1",
    "formats": ["html", "pdf", "json"]
  },
  "cache": {
    "enabled": true,
    "ttl_hours": 24,
    "max_memory_mb": 512,
    "compression_enabled": true
  },
  "security": {
    "secret_masking": true,
    "max_secret_length": 100,
    "encryption_enabled": false,
    "audit_log_enabled": true
  },
  "dashboard": {
    "host": "127.0.0.1",
    "port": 8050,
    "debug": false,
    "enable_cors": false,
    "cors_origins": [],
    "rate_limit_enabled": true,
    "rate_limit_requests": 100,
    "rate_limit_window_seconds": 60,
    "session_timeout_minutes": 30,
    "enable_https": false,
    "ssl_cert_path": null,
    "ssl_key_path": null,
    "enable_auth": true,
    "auth_username": "admin",
    "auth_password_hash": "$2b$12$REPLACE_WITH_YOUR_BCRYPT_HASH",
    "enable_csrf_protection": true,
    "max_input_length": 1000,
    "enable_audit_log": true,
    "audit_log_file": "dashboard_audit.log",
    "blocked_ips": [],
    "allowed_ips": []
  }
}
