[
  {
    "name": "Hardcoded Password",
    "regex": "(?i)(?:password|pass|pwd|secret|token)\\s*[:=]\\s*(?!true|false|null|none|\\b\\w+\\b\\.|\\s*['\"]{0,2}$)['\"]?([^'\"\\s,;`%<>]{8,})['\"]?",
    "severity": "High"
  },
  {
    "name": "API Key",
    "regex": "(?i)api[_-]?key\\s*[:=]\\s*['\"]?([a-zA-Z0-9-_.]{20,})['\"]?",
    "severity": "High"
  },
  {
    "name": "Private Key",
    "regex": "-----BEGIN (RSA|EC|OPENSSH|PGP) PRIVATE KEY-----([\\s\\S]*?)-----END \\1 PRIVATE KEY-----",
    "severity": "Critical"
  },
  {
    "name": "Database Connection String",
    "regex": "(?i)(?:jdbc|mysql|postgresql|mongodb(?:\\+srv)?)://(?:[\\w.-]+:[\\w.-]+@)?[\\w.:@/-]+",
    "severity": "Critical"
  },
  {
    "name": "AWS Access Key ID",
    "regex": "AKIA[0-9A-Z]{16}",
    "severity": "High"
  },
  {
    "name": "AWS Secret Access Key",
    "regex": "(?<![A-Za-z0-9/+=])[A-Za-z0-9/+=]{40}(?![A-Za-z0-9/+=])",
    "severity": "Critical"
  },
  {
    "name": "Generic Auth Token",
    "regex": "(?i)bearer\\s+[a-zA-Z0-9-._~+/]{20,}=*",
    "severity": "High"
  },
  {
    "name": "Credit Card Number",
    "regex": "\\b(?:4[0-9]{3}(?: ?[0-9]{4}){3}|5[1-5][0-9]{2}(?: ?[0-9]{4}){3}|3[47][0-9](?: ?[0-9]{4}){3}|6(?:011|5[0-9]{2})(?: ?[0-9]{4}){3})\\b",
    "severity": "Critical"
  },
  {
    "name": "Social Security Number",
    "regex": "\\b\\d{3}-?\\d{2}-?\\d{4}\\b",
    "severity": "High"
  },
  {
    "name": "Confidentiality Marker",
    "regex": "(?i)\\b(confidential|proprietary|secret|internal use only|restricted|do not distribute|classified)\\b",
    "severity": "Low",
    "low_risk": true
  },
  {
    "name": "JWT Token",
    "regex": "(?i)eyJ[A-Za-z0-9-_]{20,}\\.[A-Za-z0-9-_]{20,}\\.?[A-Za-z0-9-_.+/]{0,}",
    "severity": "High"
  },
  {
    "name": "GitHub Token",
    "regex": "ghp_[0-9A-Za-z]{36}",
    "severity": "Critical"
  },
  {
    "name": "Slack Webhook",
    "regex": "https://hooks\\.slack\\.com/services/T[a-zA-Z0-9_]{8}/B[a-zA-Z0-9_]{8}/[a-zA-Z0-9_]{24}",
    "severity": "High"
  },
  {
    "name": "Private IP Address",
    "regex": "(?:10\\.\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}|172\\.(?:1[6-9]|2\\d|3[0-1])\\.\\d{1,3}\\.\\d{1,3}|192\\.168\\.\\d{1,3}\\.\\d{1,3})",
    "severity": "Medium",
    "low_risk": true
  },
  {
    "name": "Email with Password",
    "regex": "email\\s*=\\s*['\"][\\w.-]+@[\\w.-]+['\"]\\s*password\\s*=\\s*['\"][^'\"]{6,}['\"]",
    "severity": "Critical"
  }
]