[
  {
    "name": "Hardcoded Password",
    "regex": "(?i)(?:password|passwd|pwd|secret|token)\\s*[:=]\\s*(?!true|false|null|none|undefined|empty|changeme|placeholder|example|\\${|\\[|\\{\\{|\\b\\w+\\b\\.|\\s*['\"]{0,2}$)['\"]?([^'\"\\s,;$%<>\\n\\r]{8,64})['\"]?",
    "severity": "High",
    "description": "Hardcoded password or secret value in code"
  },
  {
    "name": "API Key",
    "regex": "(?i)api[_-]?key\\s*[:=]\\s*['\"]?(?!your|example|placeholder|changeme|xxx)([a-zA-Z0-9-_.]{20,64})['\"]?",
    "severity": "High",
    "description": "Generic API key pattern"
  },
  {
    "name": "Private Key",
    "regex": "-----BEGIN (RSA|EC|OPENSSH|PGP|DSA|ENCRYPTED) PRIVATE KEY-----([\\s\\S]*?)-----END \\1 PRIVATE KEY-----",
    "severity": "Critical",
    "description": "Private cryptographic key material"
  },
  {
    "name": "Database Connection String",
    "regex": "(?i)(?:jdbc|mysql|postgresql|mongodb(?:\\+srv)?|redis|mssql|oracle)://(?:[\\w.-]+:[^@\\s]+@)[\\w.:/-]+",
    "severity": "Critical",
    "description": "Database connection string with credentials"
  },
  {
    "name": "AWS Access Key ID",
    "regex": "(?:^|[^A-Z0-9])AKIA[0-9A-Z]{16}(?:[^A-Z0-9]|$)",
    "severity": "High",
    "description": "AWS IAM access key ID"
  },
  {
    "name": "AWS Secret Access Key",
    "regex": "(?i)(?:aws[_-]?secret[_-]?(?:access[_-]?)?key|aws_secret)\\s*[:=]\\s*['\"]?([A-Za-z0-9/+=]{40})['\"]?",
    "severity": "Critical",
    "description": "AWS IAM secret access key with context"
  },
  {
    "name": "Generic Auth Token",
    "regex": "(?i)bearer\\s+[a-zA-Z0-9-._~+/]{20,}=*",
    "severity": "High",
    "description": "HTTP Bearer authentication token"
  },
  {
    "name": "Credit Card Number",
    "regex": "(?i)(?:card|credit|payment|visa|mastercard|amex|discover|pan|ccn|cardnum)[^\\n]{0,40}\\b(?:4[0-9]{3}[- ]?[0-9]{4}[- ]?[0-9]{4}[- ]?[0-9]{4}|5[1-5][0-9]{2}[- ]?[0-9]{4}[- ]?[0-9]{4}[- ]?[0-9]{4}|3[47][0-9]{2}[- ]?[0-9]{6}[- ]?[0-9]{5}|6(?:011|5[0-9]{2})[- ]?[0-9]{4}[- ]?[0-9]{4}[- ]?[0-9]{4})\\b",
    "severity": "Critical",
    "description": "Payment card number with context (Visa, Mastercard, Amex, Discover)"
  },
  {
    "name": "Social Security Number",
    "regex": "(?i)(?:ssn|social[\\s_-]*security|soc[\\s_-]*sec)\\s*(?:number|num|no|#)?\\s*[:=]?\\s*['\"]?(\\d{3}-\\d{2}-\\d{4})['\"]?",
    "severity": "High",
    "description": "US Social Security Number with context"
  },
  {
    "name": "JWT Token",
    "regex": "eyJ[A-Za-z0-9-_]{20,}\\.eyJ[A-Za-z0-9-_]{20,}\\.[A-Za-z0-9-_.+/]{20,}",
    "severity": "High",
    "description": "JSON Web Token (complete structure)"
  },
  {
    "name": "GitHub Token",
    "regex": "(?:ghp|gho|ghu|ghs|ghr)_[0-9A-Za-z]{36}",
    "severity": "Critical",
    "description": "GitHub personal access token or OAuth token"
  },
  {
    "name": "GitLab Token",
    "regex": "glpat-[0-9A-Za-z_-]{20}",
    "severity": "Critical",
    "description": "GitLab personal access token"
  },
  {
    "name": "Slack Token",
    "regex": "xox[baprs]-[0-9A-Za-z-]{10,}",
    "severity": "High",
    "description": "Slack API token"
  },
  {
    "name": "Slack Webhook",
    "regex": "https://hooks\\.slack\\.com/services/T[a-zA-Z0-9_]{8,}/B[a-zA-Z0-9_]{8,}/[a-zA-Z0-9_]{20,}",
    "severity": "High",
    "description": "Slack incoming webhook URL"
  },
  {
    "name": "Email with Password",
    "regex": "(?i)email\\s*[:=]\\s*['\"][\\w.-]+@[\\w.-]+['\"]\\s*[,;\\n]?\\s*password\\s*[:=]\\s*['\"][^'\"]{6,}['\"]",
    "severity": "Critical",
    "description": "Email and password pair in same context"
  },
  {
    "name": "Azure Storage Key",
    "regex": "(?i)(?:account[_-]?key|storage[_-]?key)\\s*[:=]\\s*['\"]?([A-Za-z0-9+/]{86}==)['\"]?",
    "severity": "Critical",
    "description": "Azure Storage account key"
  },
  {
    "name": "Azure Connection String",
    "regex": "(?i)DefaultEndpointsProtocol=https?;AccountName=[^;]+;AccountKey=[A-Za-z0-9+/]{86}==",
    "severity": "Critical",
    "description": "Azure Storage connection string with key"
  },
  {
    "name": "Google API Key",
    "regex": "AIza[0-9A-Za-z_-]{35}",
    "severity": "High",
    "description": "Google Cloud API key"
  },
  {
    "name": "Google OAuth Token",
    "regex": "ya29\\.[0-9A-Za-z_-]{50,}",
    "severity": "High",
    "description": "Google OAuth access token"
  },
  {
    "name": "Stripe Live Key",
    "regex": "(?:sk|rk)_live_[0-9A-Za-z]{24,}",
    "severity": "Critical",
    "description": "Stripe live API secret key"
  },
  {
    "name": "Stripe Test Key",
    "regex": "(?:sk|pk)_test_[0-9A-Za-z]{24,}",
    "severity": "Medium",
    "low_risk": true,
    "description": "Stripe test API key (lower risk but should still be protected)"
  },
  {
    "name": "SendGrid API Key",
    "regex": "SG\\.[0-9A-Za-z_-]{22}\\.[0-9A-Za-z_-]{43}",
    "severity": "High",
    "description": "SendGrid API key"
  },
  {
    "name": "Twilio API Key",
    "regex": "SK[0-9a-fA-F]{32}",
    "severity": "High",
    "description": "Twilio API key"
  },
  {
    "name": "Twilio Auth Token",
    "regex": "(?i)twilio[_-]?(?:auth[_-]?)?token\\s*[:=]\\s*['\"]?([a-f0-9]{32})['\"]?",
    "severity": "Critical",
    "description": "Twilio authentication token with context"
  },
  {
    "name": "NPM Token",
    "regex": "npm_[A-Za-z0-9]{36}",
    "severity": "High",
    "description": "NPM access token"
  },
  {
    "name": "OpenAI API Key",
    "regex": "sk-[A-Za-z0-9]{48}",
    "severity": "Critical",
    "description": "OpenAI API key"
  },
  {
    "name": "Anthropic API Key",
    "regex": "sk-ant-api[0-9]{2}-[A-Za-z0-9_-]{93}",
    "severity": "Critical",
    "description": "Anthropic Claude API key"
  },
  {
    "name": "Mailchimp API Key",
    "regex": "[0-9a-f]{32}-us[0-9]{1,2}",
    "severity": "High",
    "description": "Mailchimp API key"
  },
  {
    "name": "Discord Webhook",
    "regex": "https://discord(?:app)?\\.com/api/webhooks/[0-9]+/[A-Za-z0-9_-]+",
    "severity": "High",
    "description": "Discord webhook URL"
  },
  {
    "name": "Discord Bot Token",
    "regex": "[MN][A-Za-z\\d]{23,}\\.[\\w-]{6}\\.[\\w-]{27}",
    "severity": "Critical",
    "description": "Discord bot token"
  },
  {
    "name": "Heroku API Key",
    "regex": "(?i)heroku[_-]?api[_-]?key\\s*[:=]\\s*['\"]?([0-9a-f]{8}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{4}-[0-9a-f]{12})['\"]?",
    "severity": "High",
    "description": "Heroku API key"
  },
  {
    "name": "DigitalOcean Token",
    "regex": "dop_v1_[a-f0-9]{64}",
    "severity": "Critical",
    "description": "DigitalOcean personal access token"
  },
  {
    "name": "Datadog API Key",
    "regex": "(?i)datadog[_-]?api[_-]?key\\s*[:=]\\s*['\"]?([a-f0-9]{32})['\"]?",
    "severity": "High",
    "description": "Datadog API key"
  },
  {
    "name": "Shopify Access Token",
    "regex": "shpat_[a-fA-F0-9]{32}",
    "severity": "Critical",
    "description": "Shopify Admin API access token"
  },
  {
    "name": "PyPI API Token",
    "regex": "pypi-[A-Za-z0-9_]{50,}",
    "severity": "High",
    "description": "PyPI API token"
  },
  {
    "name": "Basic Auth Header",
    "regex": "(?i)authorization\\s*[:=]\\s*['\"]?basic\\s+[A-Za-z0-9+/]{20,}={0,2}['\"]?",
    "severity": "High",
    "description": "HTTP Basic Authentication header with encoded credentials"
  },
  {
    "name": "Private IP in Config",
    "regex": "(?i)(?:host|server|endpoint|url|address)\\s*[:=]\\s*['\"]?(?:10\\.\\d{1,3}\\.\\d{1,3}\\.\\d{1,3}|172\\.(?:1[6-9]|2\\d|3[0-1])\\.\\d{1,3}\\.\\d{1,3}|192\\.168\\.\\d{1,3}\\.\\d{1,3})['\"]?",
    "severity": "Low",
    "low_risk": true,
    "description": "Private IP address in configuration context"
  }
]
